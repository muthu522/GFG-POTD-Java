class Solution {
    public int findMinDiff(ArrayList<Integer> arr, int m) {
        int n =arr.size();
        if(n==0||m==0||m>n) return 0;
        Collections.sort(arr);
        int ans = Integer.MAX_VALUE;
        for(int i=0;i<=n-m;i++){
            int diff = arr.get(i+m-1)-arr.get(i);
            ans = Math.min(ans,diff);
        }
        return ans;
        
    }
}
